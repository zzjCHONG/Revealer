<liftui:Window
    x:Class="Simscop.Spindisk.Wpf.Hardware.Camera.TuCam.SettingViews.CustomROIWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:liftui="https://github.com/pchuan98/Lift.UI"
    xmlns:local="clr-namespace:Simscop.Spindisk.Wpf.Hardware.Camera.TuCam.SettingViews"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title=""
    Width="300"
    Height="230"
    ResizeMode="CanMinimize"
    mc:Ignorable="d">

    <liftui:Window.NonClientAreaContent>
        <StackPanel Orientation="Horizontal">
            <TextBlock
                x:Name="CustomTitle"
                VerticalAlignment="Center"
                FontSize="12"
                FontWeight="Bold"
                Foreground="#DB0029" />

        </StackPanel>
    </liftui:Window.NonClientAreaContent>

    <StackPanel>
        <Grid Margin="10,0" Background="Transparent">
            <Grid.RowDefinitions>
                <RowDefinition Height="40" />
                <RowDefinition Height="40" />
                <RowDefinition Height="40" />
                <RowDefinition Height="40" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="200" />
            </Grid.ColumnDefinitions>

            <TextBlock
                Grid.Row="0"
                Grid.Column="0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Text="ROI宽度(X):" />
            <TextBox
                x:Name="WidthTextBox"
                Grid.Row="0"
                Grid.Column="1"
                Margin="5"
                VerticalAlignment="Center" />
            <TextBlock
                Grid.Row="1"
                Grid.Column="0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Text="ROI高度(X):" />

            <TextBox
                x:Name="HeightTextBox"
                Grid.Row="1"
                Grid.Column="1"
                Margin="5"
                VerticalAlignment="Center" />
            <TextBlock
                Grid.Row="2"
                Grid.Column="0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Text="左上角X坐标:" />

            <TextBox
                x:Name="OffsetXTextBox"
                Grid.Row="2"
                Grid.Column="1"
                Margin="5"
                VerticalAlignment="Center" />

            <TextBlock
                Grid.Row="3"
                Grid.Column="0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Text="左上角Y坐标:" />

            <TextBox
                x:Name="OffsetYTextBox"
                Grid.Row="3"
                Grid.Column="1"
                Margin="5"
                VerticalAlignment="Center" />

        </Grid>
        <UniformGrid Columns="2">
            <Button
                x:Name="OKButton"
                Margin="5"
                HorizontalAlignment="Stretch"
                Click="OKButton_Click"
                Content="确定" />
            <Button
                x:Name="CancelButton"
                Margin="5"
                HorizontalAlignment="Stretch"
                Click="CancelButton_Click"
                Content="取消" />
        </UniformGrid>
    </StackPanel>

</liftui:Window>
